@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AceAttitude.Data.Models
@model Comment

<body>
    <div class="card comment-card">
        <div class="card-body">
            <h5 class="card-title">@Model.User.FirstName @Model.User.LastName</h5>
            <h6 class="card-subtitle mb-2 text-muted">Date: @Model.CreatedOn</h6>
            <p class="card-text">@Model.Content</p>
        </div>
    </div>
    <h2>Do you want to delete this comment?</h2>
    <form asp-controller="Comment" asp-action="DeleteCommentConfirmed" asp-route-courseId="@Model.CourseId" asp-route-commentId="@Model.Id" method="post">
        <button type="submit" class="btn btn-success">Yes</button>
    </form>
    <a asp-controller="Course" asp-action="Index" class="btn btn-danger">No</a>

</body>