@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AceAttitude.Data.Models
@model CommentViewModel

<body>
	<h2>Add a new comment</h2>
	<form asp-controller="Comment" asp-action="AddComment" method="post">
		<div class="mb-3">
			<label asp-for="Content" class="form-label">Content</label>
			<textarea asp-for="Content" class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
			<span asp-validation-for="Content" class="text-danger"></span>
		</div>

		<input type="submit" value="Add Comment" class="btn-primary" />
	</form>

</body>