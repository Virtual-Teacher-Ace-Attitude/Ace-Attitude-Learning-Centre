@{
    ViewData["Title"] = "Teacher Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Ace Attitude Learning Centre</title>
    <!-- Add your custom styles here -->
    <style>
        /* Custom styles for TeacherConfirmation page */
        .card {
            margin-top: 50px;
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Teacher Registration Confirmation</div>

                    <div class="card-body">
                        <p>Thank you for your interest in teaching at Ace-Attitude Learning Center.</p>
                        <p>Your registration request has been received. You will be notified via email once your registration is approved.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>