@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AceAttitude.Data.Models
@model List<Course>
@inject IAuthService AuthService

@{
    ViewData["Title"] = "Course Details";
    Layout = "_Layout";

    ViewData["IsAuthenticated"] = Context.Session.Keys.Contains("CurrentUser");

    var currentUser = Context.Session.Keys.Contains("CurrentUser") ? AuthService.CurrentUser : null;
    ViewData["IsAdmin"] = currentUser?.UserType == UserType.Admin;
    ViewData["IsTeacher"] = currentUser?.UserType == UserType.Teacher;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Ace Attitude - Courses</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <style>
        .date {
            font-size: 14px;
            color: #333;
        }

        .date i {
            margin-right: 5px; /* Add space between the icon and the date */
        }
    </style>

    <div class="container">
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-2">@course.Title</h5>
                                    <p class="mb-0"><strong>Level:</strong> @course.Level</p>
                                    <p class="mb-0"><strong>Age Group:</strong> @course.AgeGroup</p>
                                </div>
                                <div class="text-center">
                                    <p class="mb-0 date">
                                        <i class="far fa-calendar-alt"></i> @course.StartingDate
                                    </p>
                                    <p class="mb-0"><strong>Rating:</strong> @(course.Rating() >= 0 ? course.Rating().ToString("F2") : "N/A")</p>
                                </div>
                                <div>
                                    <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">Details</a>
                                </div>
                                <div class="mt-auto">
                                    <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-primary">Edit</a>
                                </div>
                                <div class="mt-auto">
                                    <a asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-primary">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>