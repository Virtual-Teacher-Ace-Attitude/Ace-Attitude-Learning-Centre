@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AceAttitude.Web.ViewModels;
@model SearchUserViewModel

<body>
	<h2>Search Student</h2>
	<form asp-controller="User" asp-action="SearchStudent" asp-route-id="@Model.Email" method="post">
		<div class="mb-3">
			<label asp-for="Email" class="form-label">Email</label>
			<input asp-for="Email" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Email">
		</div>

		<input type="submit" value="Search" class="btn-primary" />
	</form>

</body>
