@inject IAuthService AuthService

@{
    ViewData["IsAuthenticated"] = Context.Session.Keys.Contains("CurrentUser");

    var currentUser = Context.Session.Keys.Contains("CurrentUser") ? AuthService.CurrentUser : null;
    ViewData["IsAdmin"] = currentUser?.UserType == UserType.Admin;
    ViewData["IsTeacher"] = currentUser?.UserType == UserType.Teacher;
    ViewData["IsStudent"] = currentUser?.UserType == UserType.Student;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Ace Attitude Learning Centre</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <style>
        .custom-navbar {
            background-color: #001f3f; /* Dark Blue Background Color */
        }

        .profile-icon {
            width: 30px;
            height: 30px;
            margin-top: 4px; /* Adjusted margin-top for vertical centering */
        }

        .modal-content {
            background-color: #333; /* Dark grey background color */
            color: #fff; /* Text color */
        }

        .modal-header {
            border-bottom: 1px solid #444; /* Darker border for header */
        }

        .modal-body {
            padding: 20px;
        }

        .profile-icon-clicked {
            outline: 2px solid #007bff; /* Change the color to your desired outline color */
        }

        .profile-options-box {
            position: absolute;
            display: none;
            background-color: #fff; /* White background color */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Box shadow for a subtle lift */
            padding: 10px;
            border-radius: 4px;
            z-index: 1000;
        }

            .profile-options-box a {
                display: block;
                padding: 5px;
                color: #333; /* Text color */
                text-decoration: none;
                transition: background-color 0.3s;
            }

                .profile-options-box a:hover {
                    background-color: #f0f0f0; /* Light gray background on hover */
                }
    </style>
    @RenderSection("Scripts", required: false)
</head>
<body style="background-color: #f0f8ff; position: relative;">
    <!-- Light Blue Background Color -->

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light custom-navbar">
            <!-- Add the custom-navbar class here -->
            <a class="navbar-brand" href="/Home/Index">Ace Attitude Learning Centre</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <!-- Align to the right using ml-auto -->
                    <li class="nav-item">
                        @if (!(bool)ViewData["IsAuthenticated"])
                        {
                            <a asp-controller="User" asp-action="Login" class="btn btn-outline-success">Login</a>
                            <a asp-controller="User" asp-action="Register" class="btn btn-outline-primary">Register</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="btn" href="/Home/About">About</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Course" asp-action="Index" asp-route-filterParam="none" asp-route-sortParam="none" asp-route-filterParamValue="none" class="btn">Courses</a>
                    </li>

                    @if ((bool)ViewData["IsAuthenticated"])
                    {
                        <li class="nav-item" style="margin-left: 10px; position: relative;">
                            <!-- Centered profile picture vertically, clickable -->
                            <img src="~/images/default-user-icon.png" alt="Profile" class="rounded-circle img-thumbnail profile-icon" id="profile-icon">
                            <div class="profile-options-box" id="profile-options-box">
                                <a asp-controller="User" asp-action="Details" asp-route-id="@currentUser.Id" class="text-primary">View Profile</a>
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@currentUser.Id" class="text-primary">Edit Profile</a>
                                @if ((bool)ViewData["IsAdmin"])
                                {
                                    <a href="#" class="text-danger">Search User</a>
                                    <a href="#" class="text-danger">Block User</a>
                                    <a href="#" class="text-danger">Unblock User</a>
                                    <a href="#" class="text-danger">Make Admin</a>
                                }
                                <a asp-controller="User" asp-action="Logout" class="text-warning">Sign Out</a>
                            </div>
                        </li>
                    }
                    <li class="nav-item ml-auto">
                        <a class="btn" href="/api/swagger/index.html">Developer API</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <span class="text-muted">© Copyright @DateTime.Now.Year, Ace Attitude Learning Centre</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#profile-icon').click(function () {
                $(this).toggleClass('profile-icon-clicked');
                $('#profile-options-box').toggle();
            });
        });
    </script>

</body>
</html>
