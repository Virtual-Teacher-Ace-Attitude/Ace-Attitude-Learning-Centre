@{
    string gamePicturePath = "~/images/do-you-speak-it.jpg";
}

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <a asp-controller="Games" asp-action="SolveMemoryGame" asp-route-title="Irregular Verbs" class="card-link">
                    <div class="card mb-3" style="width: 100%; max-width: 800px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="~/images/memory.jpg" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body d-flex align-items-center flex-column">
                                    <h5 class="card-title text-center button-name">Irregular Verbs</h5>
                                    <p class="card-text text-center">Play a classic memory game to practice the present and past simple form of irregular verbs.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                <a asp-controller="Games" asp-action="SolveMemoryGame" asp-route-title="Ordinal Numbers" class="card-link">
                    <div class="card mb-3" style="width: 100%; max-width: 800px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="~/images/memory.jpg" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body d-flex align-items-center flex-column">
                                    <h5 class="card-title text-center button-name">Ordinal Numbers</h5>
                                    <p class="card-text text-center">Play a classic memory game to practice cardinal and ordinal numbers.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-8 mb-5"></div><!-- Added space -->
        </div>
    </div>
</body>

