

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AceAttitude.Data.Models

<body>
    <div style="display: flex; justify-content: center; flex-direction: column; align-items: center;">
        <h1>Play one of our classic games, or make your own.</h1>

        <!-- Container for the game cards -->
        <div style="display: flex; justify-content: space-between; width: 80%; max-width: 1200px; margin-top: 20px;">

            <!-- Word Search Card -->
            <div class="card" style="width: 25rem;">
                <img src="~/images/wordsearch.jpg" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Word Search</h5>
                    <p class="card-text">This is a word search puzzle game. Solve one of our classic puzzles, or create your own.</p>
                    <div class="mt-auto">
                        <a asp-controller="Games" asp-action="CreateWordSearch" method="get" class="btn btn-primary">Create</a>
                        <a asp-controller="Games" asp-action="GetWordSearches" class="btn btn-primary">Play</a>
                    </div>
                </div>
            </div>

            <!-- Memory Card -->
            <div class="card" style="width: 25rem;">
                <img src="~/images/memory.jpg" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Memory</h5>
                    <p class="card-text">This is a pairs matching memory game. Solve one of our classic matching games, or create your own.</p>
                    <div class="mt-auto">
                        <a asp-controller="Games" asp-action="CreateMemoryGame" method="get" class="btn btn-primary">Create</a>
                        <a asp-controller="Games" asp-action="GetMemoryGames" class="btn btn-primary">Play</a>
                    </div>
                </div>
            </div>

            <!-- Story Cards -->
            <div class="card" style="width: 25rem;">
                <img src="~/images/story-telling-game.jpg" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Story Cards</h5>
                    <p class="card-text">Make a story by drawing cards with pictures to use as prompts.</p>
                    <div class="mt-auto">
                        <a asp-controller="Games" asp-action="StoryCards" method="get" class="btn btn-primary">Draw</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
